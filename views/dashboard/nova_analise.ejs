<!-- Wappler include head-page="layouts/dashboard" fontawesome_5="cdn" bootstrap5="custom" is="dmx-app" id="nova_analise" appConnect="local" -->

<body>
    <meta name="ac:route" content="/dashboard/nova_analise">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Skill Sync - Dashboard</title>
        <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.0/chart.min.js"></script>
        <link rel="stylesheet" href="/css/nova_analise.css">
    </head>

    <div class=>
        <div class="max-w-4xl mx-auto">
            <h2 class="text-2xl font-bold text-white mb-6">Nova Análise</h2>

            <form id="analysisForm" class="space-y-6">
                <!-- File Upload Area -->
                <div class="file-drop-area p-8 rounded-lg text-center cursor-pointer">
                    <input type="file" id="inp_file" class="hidden" accept=".pdf,.doc,.docx">
                    <div class="text-gray-400">
                        <p class="text-lg mb-2">Arraste seu currículo aqui ou</p>
                        <button type="button" class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors">
                            Selecione um arquivo
                        </button>
                        <p class="mt-2 text-sm">PDF, DOC ou DOCX (max. 5MB)</p>
                    </div>
                    <div id="fileInfo" class="mt-4 text-purple-300 hidden">
                        Arquivo selecionado: <span id="fileName"></span>
                    </div>
                </div>

                <!-- Job Description -->
                <div>
                    <label for="inp_textarea" class="block text-white mb-2">Descrição da Vaga</label>
                    <textarea id="inp_textarea" rows="6" class="w-full px-4 py-3 rounded-lg input-field text-white focus:outline-none" placeholder="Cole aqui a descrição da vaga..."></textarea>
                </div>

                <!-- Submit Button -->
                <button id="btnSubmit" type="submit" class="w-full py-3 rounded-lg bg-gradient-to-r from-purple-600 to-purple-800 text-white font-medium hover:opacity-90 transition-opacity">
                    Analisar Compatibilidade
                </button>
            </form>

            <!-- Results Container -->
            <div id="responseContainer" class="mt-8 bg-gray-800 rounded-lg p-6 hidden">
                <!-- Resultado será inserido aqui via JavaScript -->
            </div>
        </div>
    </div>

    <!-- Preloader -->
    <div id="preloader1" class="preloader">
        <div class="spinner"></div>
    </div>
    <script src="/assets/js/nova_analise.js"></script>

</body>